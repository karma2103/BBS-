<%- include('../partials/header'); %>
    <div class="container mt-5">
        <h3 class="mb-4">Studio Bookings</h3>
        <div class="d-flex justify-content-end mb-3">
            <a href="/book" class="btn btn-primary">Book New Studio</a>
        </div>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Producer Name</th>
                    <th>Program Title</th>
                    <th>User Name</th>
                    <th>Designation</th>
                    <th>Booking Date</th>
                    <th>Setup Date</th>
                    <th>Setup Time</th>
                    <th>Venue</th>
                </tr>
            </thead>
            <tbody>
                <% if (bookings.length > 0) { %>
                    <% bookings.forEach((booking, index) => { %>
                        <tr>
                            <td><%= index + 1 %></td>
                            <td><%= booking.producerName %></td>
                            <td><%= booking.programTitle %></td>
                            <td><%= booking.userName %></td>
                            <td><%= booking.designation %></td>
                            <td><%= new Date(booking.bookingDate).toLocaleDateString() %></td>
                            <td><%= new Date(booking.setupDate).toLocaleDateString() %></td>
                            <td><%= new Date(booking.setupTime).toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' }) %></td>
                            <td><%= booking.venue === 'tvStudio' ? 'TV Studio' : 'News Studio' %></td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="9" class="text-center">No bookings found.</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

<%- include('../partials/footer'); %>